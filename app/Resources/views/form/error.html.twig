{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="alert alert-danger">
            {%- for error in errors -%}
                <span>{{ error.message }}</span>
            {%- endfor -%}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {%- endif -%}
{%- endblock form_errors -%}
