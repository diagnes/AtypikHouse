{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}{{ parent() }} {{ (housing.title) ? housing.title : "New Housing" }} {% endblock %}

{% set menu_level = 'housings_admin' %}

{% block content %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-8">
            <h2>Edit Housing</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('admin_homepage') }}">Home</a>
                </li>
                <li>
                    <a href="{{ path('atyipikhouse_admin_housing_index') }}">Housing</a>
                </li>
                <li class="active">
                    <strong>{{ (housing.title) ? housing.title : "New Housing" }}</strong>
                </li>
            </ol>
        </div>
        {% if housing.state and housing.slug %}
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-4 col-lg-4 col-sm-6 col-xs-12">
                    {% include 'HousingBundle:housing/partial:housing-state.html.twig' %}
                </div>
                <div class="col-lg-8 col-lg-8 col-sm-6 col-xs-12">
                    <a class="btn btn-primary btn-rounded btn-block" href="{{ path('atyipikhouse_admin_housing_ask_validation', {'slug': housing.slug }) }}"><i class="fa fa-cloud-download"></i> Ask for a validation</a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">

        {% if housing.slug %}
            <div class="row">
                <div class="col-lg-2 m-b-md">
                    <a href="{{ path('atyipikhouse_admin_housing_edit', {'slug': housing.slug}) }}" class="btn btn-default dim btn-block btn-outline">Basic Info</a>
                </div>
                {% if housing.type %}
                    <div class="col-lg-2 m-b-md">
                        <a href="{{ path('atyipikhouse_admin_housing_edit_detail', {'slug': housing.slug}) }}" class="btn btn-default dim btn-block btn-outline">Details</a>
                    </div>
                {% endif %}
                <div class="col-lg-2 m-b-md">
                    <a href="{{ path('atyipikhouse_admin_housing_edit_teaser', {'slug': housing.slug}) }}" class="btn btn-default dim btn-block btn-outline">Teaser</a>
                </div>
                <div class="col-lg-2 m-b-md">
                    <a href="{{ path('atyipikhouse_admin_housing_edit_unavailability', {'slug': housing.slug}) }}" class="btn btn-default dim btn-block btn-outline">Unavailability</a>
                </div>
                <div class="col-lg-2 m-b-md">
                    <a href="{{ path('atyipikhouse_admin_housing_edit_document', {'slug': housing.slug}) }}" class="btn btn-default dim btn-block btn-outline">Document</a>
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-lg-12 m-b-md">
                {% block form_content %}

                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}